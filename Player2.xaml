<Window x:Class="DOMINO.PlayerNamesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод имен игроков" 
        Height="300" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#FF0A2E0A">

    <Border Margin="20" Background="#FF1E3A01" CornerRadius="10" BorderBrush="#FF5A3000" BorderThickness="3">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Введите имена игроков" HorizontalAlignment="Center" 
                       FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

            <Label Grid.Row="1" Content="Имя первого игрока:"/>
            <TextBox Grid.Row="2" x:Name="Player1TextBox" Text="Игрок 1" Margin="0,0,0,10"/>

            <Label Grid.Row="3" Content="Имя второго игрока:"/>
            <TextBox Grid.Row="4" x:Name="Player2TextBox" Text="Игрок 2" Margin="0,0,0,15"/>

            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" Width="100" Margin="0,0,10,0" Click="CancelButton_Click"
                        Background="#FF5A3000" Foreground="White" BorderBrush="#FF3A2000"/>
                <Button Content="Начать игру" Width="100" Click="StartGameButton_Click" IsDefault="True"
                        Background="#FF8B0000" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>