<Window x:Class="DOMINO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Domino Billiard Club" 
        Height="1024" 
        Width="1280"
        Background="#FF0A2E0A"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Стили текста -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFF0E0B0"/>
            <Setter Property="FontFamily" Value="Georgia"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextElement.FontWeight" Value="Bold"/>
        </Style>

        <!-- Стиль игрового поля -->
        <Style x:Key="BilliardTableStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FF0D5E0D" Offset="0"/>
                        <GradientStop Color="#FF083A08" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#FF5A3000"/>
            <Setter Property="BorderThickness" Value="15"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Margin" Value="20"/>
        </Style>

        <!-- Стиль панели игрока -->
        <Style x:Key="PlayerRailStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FF5A3000" Offset="0"/>
                        <GradientStop Color="#FF3A2000" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#FF3A2000"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="20,0,20,20"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <!-- Базовый стиль кнопок -->
        <Style x:Key="BilliardButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#FFF0E0B0"/>
            <Setter Property="FontFamily" Value="Georgia"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стили конкретных кнопок -->
        <Style x:Key="ActionButtonStyle" BasedOn="{StaticResource BilliardButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#FF8B0000"/>
        </Style>

        <Style x:Key="NewGameButtonStyle" BasedOn="{StaticResource BilliardButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#FF006400"/>
        </Style>

        <Style x:Key="ExitButtonStyle" BasedOn="{StaticResource BilliardButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#FF8B0000"/>
        </Style>

        <Style x:Key="StatsButtonStyle" BasedOn="{StaticResource BilliardButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#FF1E3A01"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель информации -->
        <Border Grid.Row="0" Background="#FF5A3000" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Текущий ход: " Margin="5"/>
                <TextBlock x:Name="CurrentPlayerText" Text="Игрок 1" Margin="5" Foreground="#FFFFD700"/>
                <TextBlock Text="•" Margin="10,0" FontSize="20" Opacity="0.5"/>
                <TextBlock Text="Костяшек в базаре: " Margin="5"/>
                <TextBlock x:Name="BoneyardCountText" Text="28" Margin="5" Foreground="#FFFFD700"/>
                <Button Click="ChangeModeMusic" BorderBrush="#FF5A3000" Background="Transparent" Height="50" Width="50">
                    <Image x:Name ="PauseMusic" Source="/Resource/SOUNDON.png" Cursor="Hand"/>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="LightGray"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <!-- Отключаем обводку при наведении -->
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="LightGray"/>
                                    <!-- Можно задать другой цвет -->
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="Gray"/>
                                    <!-- Цвет при нажатии -->
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <!-- Игровое поле (бильярдный стол) -->
        <Border Grid.Row="1" Style="{StaticResource BilliardTableStyle}">
            <Canvas x:Name="GameBoard" ClipToBounds="True" 
                    MouseLeftButtonDown="CanvasLeftClicked" 
                    MouseRightButtonDown="CanvasRightClicked"
                    Background="Transparent"/>
        </Border>

        <!-- Панель кнопок -->
        <Border Grid.Row="2" Background="#FF5A3000" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="DrawButton" Content="Взять из базара" Style="{StaticResource ActionButtonStyle}" Click="DrawButton_Click"/>
                <Button x:Name="PassButton" Content="Пропустить ход" Style="{StaticResource ActionButtonStyle}" Click="PassButton_Click"/>
                <Button x:Name="NewGameButton" Content="Новая игра" Style="{StaticResource NewGameButtonStyle}" Click="NewGameButton_Click"/>
                <Button x:Name="StatsButton" Content="Статистика" Style="{StaticResource StatsButtonStyle}" Click="StatsButton_Click"/>
                <Button x:Name="ExiteButton" Content="Выход" Style="{StaticResource ExitButtonStyle}" Click="ExiteButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Рука игрока (нижний борт) -->
        <Border Grid.Row="3" Style="{StaticResource PlayerRailStyle}">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <StackPanel x:Name="HandPlayer" Orientation="Horizontal" HorizontalAlignment="Left"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
